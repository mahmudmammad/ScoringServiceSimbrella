{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ScoringService": {
    "Conditions": [
      {
        "Type": "SalaryThreshold",
        "Enabled": true,
        "Required": true,
        "Priority": 1,
        "Parameters": {
          "MinimumSalary": "30000",
          "SalaryMultiplier": "3.0"
        }
      },
      {
        "Type": "LoanCountLimit",
        "Enabled": true,
        "Required": true,
        "Priority": 2,
        "Parameters": {
          "MaxLoanCount": "3"
        }
      },
      {
        "Type": "AccountBalance",
        "Enabled": true,
        "Required": false,
        "Priority": 3,
        "Parameters": {
          "MinimumBalance": "1000",
          "BalanceMultiplier": "2.0"
        }
      }
    ]
  }
}